          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a href="/vehicles" class="relative text-gray-700 hover:text-blue-600 px-4 py-2 text-lg font-medium transition duration-300 group">
          Vehicles
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a href="/contact" class="relative text-gray-700 hover:text-blue-600 px-4 py-2 text-lg font-medium transition duration-300 group">
          Contact
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full"></span>
        </a>
      </div>
      
      <!-- User Menu -->
      <div class="flex items-center space-x-4">
        <% if (user) { %>
          <div class="relative">
            <button data-dropdown-toggle="user-menu" class="flex items-center text-gray-700 hover:text-blue-600 px-4 py-2 text-lg font-medium focus:outline-none transition duration-300">
